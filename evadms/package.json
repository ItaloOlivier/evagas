{
  "name": "evadms",
  "version": "1.0.0",
  "private": true,
  "description": "EVA Gas Depot Management System",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "prisma generate --schema=packages/database/prisma/schema.prisma",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "db:migrate": "npm run migrate --workspace=@evadms/database",
    "db:seed": "npm run seed --workspace=@evadms/database",
    "db:generate": "npm run generate --workspace=@evadms/database",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.0.0"
}
